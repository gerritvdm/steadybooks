@page
@model SteadyBooks.Areas.Identity.Pages.Account.ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            @if (Model.IsSuccess)
            {
                <div class="text-center mb-4">
                    <div class="mb-4">
                        <i class="bi bi-check-circle" style="font-size: 5rem; color: #28a745;"></i>
                    </div>
                    <h1 class="h2 mb-3">Email Confirmed!</h1>
                    <p class="text-muted mb-4">Your account has been successfully verified.</p>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body p-4 text-center">
                        <h5 class="mb-3">You're all set!</h5>
                        <p class="mb-4">You can now log in and start creating financial dashboards for your clients.</p>
                        
                        <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Log In
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center mb-4">
                    <div class="mb-4">
                        <i class="bi bi-x-circle" style="font-size: 5rem; color: #dc3545;"></i>
                    </div>
                    <h1 class="h2 mb-3">Email Confirmation Failed</h1>
                </div>

                <div class="card shadow-sm border-danger">
                    <div class="card-body p-4">
                        <div class="alert alert-danger mb-0">
                            <h5 class="alert-heading">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Something Went Wrong
                            </h5>
                            <p class="mb-0">@Model.ErrorMessage</p>
                        </div>

                        <hr>

                        <p class="mb-3"><strong>What you can do:</strong></p>
                        <ul class="mb-4">
                            <li>Try clicking the confirmation link in your email again</li>
                            <li>Request a new confirmation email</li>
                            <li>Contact support if the problem persists</li>
                        </ul>

                        <div class="text-center">
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
