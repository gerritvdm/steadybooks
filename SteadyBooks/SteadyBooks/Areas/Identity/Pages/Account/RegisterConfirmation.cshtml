@page
@model SteadyBooks.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <div class="mb-4">
                    <i class="bi bi-envelope-check" style="font-size: 4rem; color: #667eea;"></i>
                </div>
                <h1 class="h2 mb-3">Check Your Email!</h1>
                <p class="text-muted">We've sent a confirmation email to:</p>
                <p class="h5 mb-4">@Model.Email</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">What's Next?</h5>
                    <ol class="ps-3">
                        <li class="mb-3">
                            <strong>Check your inbox</strong><br>
                            <small class="text-muted">Look for an email from SteadyBooks</small>
                        </li>
                        <li class="mb-3">
                            <strong>Click the confirmation link</strong><br>
                            <small class="text-muted">This verifies your email address</small>
                        </li>
                        <li class="mb-3">
                            <strong>Log in to your account</strong><br>
                            <small class="text-muted">Start creating client dashboards!</small>
                        </li>
                    </ol>

                    <div class="alert alert-info mt-4 mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Didn't receive the email?</strong>
                        <ul class="mb-0 mt-2 ps-3">
                            <li>Check your spam/junk folder</li>
                            <li>Make sure you entered the correct email address</li>
                            <li>Wait a few minutes and check again</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Login
                </a>
            </div>
        </div>
    </div>
</div>
