@page
@model SteadyBooks.Pages.QuickBooks.CallbackModel
@{
    ViewData["Title"] = "QuickBooks Connection";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @if (Model.Success)
                {
                    <div class="card shadow-sm border-success">
                        <div class="card-body text-center py-5">
                            <div class="mb-4">
                                <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="text-success mb-3">Connected Successfully!</h2>
                            <p class="text-muted mb-4">
                                Your QuickBooks company <strong>@Model.CompanyName</strong> has been connected to your dashboard.
                            </p>
                            <div class="alert alert-info small">
                                <i class="bi bi-info-circle me-2"></i>
                                You can now close this window and return to your dashboard configuration.
                            </div>
                            <a href="/Dashboards/Configure/@Model.DashboardId" class="btn btn-primary btn-lg mt-3">
                                <i class="bi bi-arrow-left me-2"></i>Return to Dashboard
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card shadow-sm border-danger">
                        <div class="card-body text-center py-5">
                            <div class="mb-4">
                                <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="text-danger mb-3">Connection Failed</h2>
                            <p class="text-muted mb-4">@Model.ErrorMessage</p>
                            <div class="alert alert-warning small">
                                <strong>What to try:</strong>
                                <ul class="text-start mb-0 mt-2">
                                    <li>Make sure you authorized the connection</li>
                                    <li>Check your QuickBooks subscription is active</li>
                                    <li>Try connecting again</li>
                                </ul>
                            </div>
                            <a href="/Dashboards/Configure/@Model.DashboardId" class="btn btn-primary btn-lg mt-3">
                                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        // Auto-close after 5 seconds if successful
        @if (Model.Success)
        {
            <text>
            setTimeout(function() {
                window.location.href = '/Dashboards/Configure/@Model.DashboardId';
            }, 5000);
            </text>
        }
    </script>
</body>
</html>
