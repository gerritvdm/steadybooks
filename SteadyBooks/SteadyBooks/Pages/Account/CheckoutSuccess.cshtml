@page
@model SteadyBooks.Pages.Account.CheckoutSuccessModel
@{
    ViewData["Title"] = "Subscription Successful";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <div class="mb-4">
                    <i class="bi bi-check-circle" style="font-size: 5rem; color: #28a745;"></i>
                </div>
                <h1 class="h2 mb-3">Welcome to SteadyBooks!</h1>
                <p class="text-muted mb-4">Your subscription has been activated successfully.</p>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="mb-3">What's Next?</h5>
                    <ol class="ps-3">
                        <li class="mb-3">
                            <strong>Set up your firm branding</strong><br>
                            <small class="text-muted">Add your logo and customize colors</small>
                        </li>
                        <li class="mb-3">
                            <strong>Create your first dashboard</strong><br>
                            <small class="text-muted">Start building client dashboards</small>
                        </li>
                        <li class="mb-3">
                            <strong>Connect QuickBooks Online</strong><br>
                            <small class="text-muted">Pull real financial data</small>
                        </li>
                        <li class="mb-3">
                            <strong>Share with clients</strong><br>
                            <small class="text-muted">Send secure dashboard links</small>
                        </li>
                    </ol>
                </div>
            </div>

            <div class="card shadow-sm border-primary mb-4">
                <div class="card-body p-4 text-center">
                    <h5 class="mb-3"><i class="bi bi-gift me-2"></i>Your Trial is Active</h5>
                    <p class="mb-3">You have <strong>14 days</strong> to try all features risk-free.</p>
                    <p class="text-muted small mb-0">
                        You won't be charged until after your trial ends. Cancel anytime from your account settings.
                    </p>
                </div>
            </div>

            <div class="d-grid gap-2">
                <a asp-page="/Firm/Settings" class="btn btn-primary btn-lg">
                    <i class="bi bi-palette me-2"></i>Set Up Firm Branding
                </a>
                <a asp-page="/Dashboards/Index" class="btn btn-outline-primary">
                    <i class="bi bi-clipboard-data me-2"></i>Create Your First Dashboard
                </a>
                <a asp-page="/Account/Settings" class="btn btn-outline-secondary">
                    <i class="bi bi-gear me-2"></i>View Account Settings
                </a>
            </div>
        </div>
    </div>
</div>
