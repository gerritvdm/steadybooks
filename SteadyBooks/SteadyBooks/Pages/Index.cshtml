@page
@model IndexModel
@{
    ViewData["Title"] = "Client-Friendly Financial Dashboards for QuickBooks";
}

<div class="landing-page">
    <!-- Hero Section -->
    <section class="hero-section text-center py-5">
        <div class="container">
            <h1 class="display-3 fw-bold mb-4">Client-Friendly Financial Dashboards for QuickBooks</h1>
            <p class="lead text-muted mb-4">Give your clients the transparency they want—without compromising your workflow or their data security.</p>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-5 py-3">Sign Up as an Accountant</a>
                <a asp-page="/Account/Pricing" class="btn btn-outline-primary btn-lg px-5 py-3">View Pricing</a>
            </div>
            <p class="mt-3 text-muted"><small>Free 30-day trial • No credit card required</small></p>
        </div>
    </section>

    <!-- Who It's For -->
    <section class="py-5 bg-light">
        <div class="container text-center">
            <p class="lead text-muted">Built specifically for <strong>Accountants & Accounting Firms</strong> who use QuickBooks Online</p>
        </div>
    </section>

    <!-- Key Benefits -->
    <section class="benefits-section py-5">
        <div class="container">
            <h2 class="text-center mb-5">Why Accountants Love SteadyBooks</h2>
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="benefit-card text-center p-4">
                        <div class="benefit-icon mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-lock-fill text-primary" viewBox="0 0 16 16">
                                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2"/>
                            </svg>
                        </div>
                        <h4 class="mb-3">100% Read-Only</h4>
                        <p class="text-muted">Your clients can view their numbers, but they can't change a thing. No accidental edits, no worries.</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="benefit-card text-center p-4">
                        <div class="benefit-icon mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-palette-fill text-primary" viewBox="0 0 16 16">
                                <path d="M12.433 10.07C14.133 10.585 16 11.15 16 8a8 8 0 1 0-8 8c1.996 0 1.826-1.504 1.649-3.08-.124-1.101-.252-2.237.351-2.92.465-.527 1.42-.237 2.433.07M8 5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m4.5 3a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3M5 6.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m.5 6.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3"/>
                            </svg>
                        </div>
                        <h4 class="mb-3">White-Labeled</h4>
                        <p class="text-muted">Add your firm's logo, colors, and branding. Clients see <em>your</em> brand, not ours.</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="benefit-card text-center p-4">
                        <div class="benefit-icon mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-shield-check text-primary" viewBox="0 0 16 16">
                                <path d="M5.338 1.59a61 61 0 0 0-2.837.856.48.48 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.7 10.7 0 0 0 2.287 2.233c.346.244.652.42.893.533q.18.085.293.118a1 1 0 0 0 .101.025 1 1 0 0 0 .1-.025q.114-.034.294-.118c.24-.113.547-.29.893-.533a10.7 10.7 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.8 11.8 0 0 1-2.517 2.453 7 7 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7 7 0 0 1-1.048-.625 11.8 11.8 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 63 63 0 0 1 5.072.56"/>
                                <path d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
                            </svg>
                        </div>
                        <h4 class="mb-3">Client-Safe</h4>
                        <p class="text-muted">No login credentials to manage. Clients get a secure link—simple, fast, and safe.</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="benefit-card text-center p-4">
                        <div class="benefit-icon mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-lightning-charge-fill text-primary" viewBox="0 0 16 16">
                                <path d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z"/>
                            </svg>
                        </div>
                        <h4 class="mb-3">Quick Setup</h4>
                        <p class="text-muted">Connect QuickBooks in minutes. Customize what your clients see. Share a secure link. Done.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">How It Works</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="step-number mb-3">1</div>
                        <h5>Connect QuickBooks</h5>
                        <p class="text-muted">Securely link your client's QuickBooks Online account with read-only access.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="step-number mb-3">2</div>
                        <h5>Customize Dashboard</h5>
                        <p class="text-muted">Add your branding and choose which metrics to display—cash, profit, taxes, and more.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="step-number mb-3">3</div>
                        <h5>Share with Client</h5>
                        <p class="text-muted">Send a secure link. Your client views their financial snapshot anytime, anywhere.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Screenshot Placeholder -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">See It In Action</h2>
            <div class="screenshot-placeholder text-center p-5 bg-light rounded">
                <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-laptop text-muted mb-3" viewBox="0 0 16 16">
                    <path d="M13.5 3a.5.5 0 0 1 .5.5V11H2V3.5a.5.5 0 0 1 .5-.5zm-11-1A1.5 1.5 0 0 0 1 3.5V12h14V3.5A1.5 1.5 0 0 0 13.5 2zM0 12.5h16a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 12.5"/>
                </svg>
                <p class="text-muted">Dashboard mockup coming soon</p>
            </div>
        </div>
    </section>

    <!-- Trust & Security -->
    <section class="py-5 bg-light">
        <div class="container text-center">
            <h2 class="mb-4">Built with Trust & Security in Mind</h2>
            <p class="lead text-muted mb-4">
                SteadyBooks uses <strong>read-only access</strong> to QuickBooks Online.<br>
                We never modify, create, or delete any of your client's financial data.
            </p>
            <p class="text-muted">
                <small>Powered by QuickBooks Online API • Compliant with Intuit security standards</small>
            </p>
        </div>
    </section>

    <!-- Pricing Section -->
    <section class="py-5">
        <div class="container text-center">
            <h2 class="mb-4">Choose the Perfect Plan</h2>
            <p class="lead text-muted mb-4">Flexible pricing tailored for accountants and their clients.</p>
            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="pricing-card p-4 rounded shadow-sm">
                        <div class="pricing-header mb-4">
                            <h3 class="mb-0">Starter</h3>
                            <p class="text-muted">For sole practitioners</p>
                        </div>
                        <div class="pricing-body mb-4">
                            <h2 class="fw-bold">$19/month</h2>
                            <p class="text-muted">Billed annually. Cancel anytime.</p>
                        </div>
                        <ul class="list-unstyled text-start mb-4">
                            <li class="text-muted">✔️ Up to 3 clients</li>
                            <li class="text-muted">✔️ Basic metrics: cash, profit</li>
                            <li class="text-muted">✔️ Email support</li>
                        </ul>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary w-100">Start Free Trial</a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="pricing-card p-4 rounded shadow-sm">
                        <div class="pricing-header mb-4">
                            <h3 class="mb-0">Professional</h3>
                            <p class="text-muted">For growing firms</p>
                        </div>
                        <div class="pricing-body mb-4">
                            <h2 class="fw-bold">$49/month</h2>
                            <p class="text-muted">Billed annually. Cancel anytime.</p>
                        </div>
                        <ul class="list-unstyled text-start mb-4">
                            <li class="text-muted">✔️ Up to 10 clients</li>
                            <li class="text-muted">✔️ Advanced metrics: tax estimates, forecasts</li>
                            <li class="text-muted">✔️ Priority email support</li>
                        </ul>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary w-100">Start Free Trial</a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="pricing-card p-4 rounded shadow-sm">
                        <div class="pricing-header mb-4">
                            <h3 class="mb-0">Business</h3>
                            <p class="text-muted">For established firms</p>
                        </div>
                        <div class="pricing-body mb-4">
                            <h2 class="fw-bold">$99/month</h2>
                            <p class="text-muted">Billed annually. Cancel anytime.</p>
                        </div>
                        <ul class="list-unstyled text-start mb-4">
                            <li class="text-muted">✔️ Unlimited clients</li>
                            <li class="text-muted">✔️ All metrics and features</li>
                            <li class="text-muted">✔️ 24/7 priority support</li>
                        </ul>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary w-100">Start Free Trial</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Final CTA -->
    <section class="py-5">
        <div class="container text-center">
            <h2 class="mb-4">Ready to Impress Your Clients?</h2>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-5 py-3">Sign Up as an Accountant</a>
            <p class="mt-3 text-muted">
                <small>Have questions? <a href="mailto:support@steadybooks.com">Contact us</a></small>
            </p>
        </div>
    </section>
</div>
